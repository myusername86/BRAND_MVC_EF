@model Brand
<div class="container">
    <div class="card">
        <div class="card-header text-center text-uppercase">
            Brand Details
        </div>
        <div class="card-Body">
            <div class="row">
                <div class="cols-md-8">
                    <div class="row">
                        <div class="col-md-4">
                            <p class="card-text text-uppercase"><strong>Id</strong></p>
                        </div>
                        
                            <div class="col-md-8">  
                                <p class="card-text">:@Model.ID</p>
                            </div>
                                                                              
                       
                    </div>
                    <div class="row">
                        <div class="col-md-4">
                            <p class="card-text text-uppercase"><strong>Brand Name</strong></p>
                        </div>
                        <div class="col-md-8">
                            <p class="card-text">:@Model.Name</p>
                        </div>

                    </div>
                    <div class="row">
                        <div class="col-md-4">
                            <p class="card-text text-uppercase"><strong>Estabilished Year</strong></p>
                        </div>
                        <div class="col-md-8">
                            <p class="card-text">:@Model.EstabilishedYear</p>
                        </div>

                    </div>


                </div>
                <div class="col-mt-4">
                    <img src="@Model.BrandLogo" width="50%" />
                </div>
            </div>
            <div class="row">
                <div class="col-md-12 text-center">
                    <a asp-controller="Brand" asp-action="Index" class="btn btn-danger">Back</a>
                </div>
            </div>
        </div>
    </div>
</div>