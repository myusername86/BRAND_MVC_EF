@model Brand
<div class="container">
    <div class="row">
        <div class="col-md-2">
            <h2 class="text-uppercase text-center">CreateBrand</h2>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12 border-1 border">
            <form method="post" enctype="multipart/form-data">
                <div class="mt-3">
                <label asp-for="@Model.Name" class="form-label"></label>
                <input asp-for="@Model.Name"class="form-control">
                <span asp-validation-for="@Model.Name" class="text-danger"></span>
                </div>
                <div class="mt-3">
                    <label asp-for="@Model.EstabilishedYear" class="form-label"></label>
                    <input asp-for="@Model.EstabilishedYear" class="form-control">
                    <span asp-validation-for="@Model.EstabilishedYear" class="text-danger"></span>
                    </div>
                    <div class="mt-3">
                        <label asp-for="@Model.BrandLogo"class="form-label"></label>
                        <input type="file" name="files" id="uploadbox" class="form-control" />
                        </div>
                        
                            <div class="mt-3">
                                <a asp-controller="Brand" asp-action="Index" class="btn btn-danger">Back</a>
                                <button type="submit" class="btn btn-sucess">Create</button>
                            </div>


                
                </form>
        </div> 
</div>
</div>
@section Scripts
{
    <partial name="_ValidationScriptsPartial" />
}